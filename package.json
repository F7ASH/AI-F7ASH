{
  "name": "@hibikiapp/bot",
  "version": "4.0.0-alpha",
  "description": "The best Discord bot!",
  "author": "sysdotini <espi@riseup.net> (https://espi.me)",
  "contributors": [],
  "license": "MIT",
  "homepage": "https://hibiki.app",
  "main": "./dist/index.js",
  "bugs": {
    "url": "https://github.com/sysdotini/hibiki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/hibiki.git"
  },
  "engines": {
    "node": ">=16.6.0"
  },
  "scripts": {
    "build": "tsc",
    "build:config": "cross-env copyfiles 'config.toml' './dist/'",
    "dev": "cross-env nodemon",
    "format": "cross-env prettier --config .prettierrc './**/*.{md,js,json,ts,yml}' --write",
    "lint": "eslint --fix .",
    "prebuild": "cross-env rimraf ./dist/",
    "postbuild": "npm run build:config",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "test": "tsc && eslint ."
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "@discordjs/rest": "^0.1.0-canary.0",
    "@discordjs/voice": "^0.6.0",
    "@iarna/toml": "^2.2.5",
    "discord.js": "^13.2.0",
    "got": "^11.8.2",
    "knex": "^0.95.11",
    "pg": "^8.7.1",
    "pino": "^7.0.1",
    "pino-pretty": "^7.1.0"
  },
  "devDependencies": {
    "@sysdotini/eslint-config": "^2.0.1",
    "@types/node": "^16.11.0",
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "discord-api-types": "^0.23.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.5",
    "erlpack": "github:discord/erlpack",
    "libsodium-wrappers": "^0.7.9",
    "utf-8-validate": "^5.0.7",
    "zlib-sync": "^0.1.7"
  }
}
